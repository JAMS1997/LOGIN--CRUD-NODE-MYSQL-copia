<%- include('partials/_header.ejs') %>

<!-- Inicio del formulario de registro -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Formulario de registro</h2>
                </div>
                <div class="card-body">
                    <!-- Inicio del formulario HTML -->
                    <form action="/register" method="post">

                        <!-- Campo para el nombre de usuario -->
                        <div class="form-group">
                            <label for="user">Usuario</label>
                            <input type="text" class="form-control" id="user" name="user" required>
                        </div>

                        <!-- Campo para el nombre completo -->
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <!-- Campo para seleccionar el rol -->
                        <div class="form-group">
                            <label for="rol">Rol</label>
                            <select class="form-control" id="rol" name="rol">
                                <option value="admin">Admin</option>
                                <option value="data entry">Data Entry</option>
                            </select>
                        </div>

                        <!-- Campo para la contraseña -->
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <!-- Botón de envío del formulario -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Guardar Usuario</button>
                        
                        <button id="redirectButton" class="btn btn-light">Ir a la página principal</button>
                        </div>
                        <script>
                            // JavaScript para manejar la redirección cuando se hace clic en el botón
                            document.getElementById('redirectButton').addEventListener('click', function() {
                                window.location.href = '/';
                            });
                        </script>
                    </form> <!-- Fin del formulario HTML -->
                </div>
            </div>
        </div>
    </div>
</div> <!-- Fin del formulario de registro -->



